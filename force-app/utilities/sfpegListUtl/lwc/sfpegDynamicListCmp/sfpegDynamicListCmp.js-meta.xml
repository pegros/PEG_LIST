<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>66.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>SF PEG Dynamic List</masterLabel>
    <description>This component enables to display a custom List upon notification.</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__RecordPage</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__AppPage,lightning__HomePage,lightning__RecordPage">
            <property   name="channel"          label="Channel"
                        type="String"           default="DynamicList"
                        description="Channel from which notifications should be processed."/>
            <property   name="isDebug"          label="Debug?"
                        type="Boolean"          default="false"
                        description="Flag to activate debug mode."/>
            <property   name="isDebugFine"      label="Debug Fine?"
                        type="Boolean"          default="false"
                        description="Flag to activate fine debug mode."/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>